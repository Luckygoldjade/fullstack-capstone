                <option value="Job Tags Change">Job Tags Change</option>
            </select>





            <!-- Job description. -->
            <!-- Set limits for this box to help avoid script injections. -->
            <label for="delInstruct">Description</label>
                <textarea name="delInstruct" 
                id="delInstruct" 
                minlenth="3" 
                maxlenth="250" 
                rows="5"
                cols="35"
                placeholder="Write 250 characters or less."></textarea>
        </fieldset>



          <!-- Use the button element to send the data -->
            <button type="submit">Submit review</button>
    
    </form>
