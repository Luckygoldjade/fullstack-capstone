    <section>
    <h2>Job Entry</h2>
    <article>
    <p>
        Add to your job listing here. Start at the top and click through the form. Job Title, Salary, Benefits, Location, Url, Description.
    </p>

    <!-- The action attribute refers to a script file, or to a route for the data. The method refers to a GET or POST request. -->
    <form action="/jobs" method="POST" class="sideByside">
        <fieldset>
            <!-- Required questions for this legend -->
            <legend>Add your Job Title, Salary, Benefits, Location, Url, Description</legend>

            <!-- It is best practice to require the title name. -->
            <!-- SQL column name will reference name attribute. -->
            <label for="title" class="required">Job Title</label>
                <input type="text" 
                name="title" 
                id="title" 
                size="30" 
                maxlength="100" 
                required placeholder="Job Title" 
                autofocus/>

            <!-- Dropdown menu for suggested titles -->
            <label for="suggested-titles">Suggested Titles</label>
            <select name="suggested-titles" id="suggested-titles">
                <option value="" disabled selected>Select a suggested title</option>
                <option value="Software Engineer">Software Engineer</option>
                <option value="Project Manager">Project Manager</option>
                <option value="Data Analyst">Data Analyst</option>
                <option value="Web Developer">Web Developer</option>
                <option value="UX Designer">UX Designer</option>
            </select>



            <!-- Require the job salary. -->
            <!-- SQL column name will reference name attribute. -->
            <label for="salary" class="required">Job Salary</label>
                <input type="varchar"
                pattern="^[0-9]+(\.[0-9]{1,2})?$"
                name="salary" 
                id="salary" 
                size="30" 
                maxlength="100" 
                required placeholder="Job Salary" 
                min="0" step="0.01"/>

            <!-- Job Status -->
            <!-- SQL column name will reference name attribute. -->
            <label for="jobstatus" class="required">Job Status</label>
                <input type="varchar"
                name="jobstatus" 
                id="jobstatus" 
                size="30" 
                maxlength="100" 
                required placeholder="Job Status" />

            <!-- Dropdown menu for suggested job statuses -->
            <label for="suggested-job-statuses">Suggested Job Statuses</label>
            <select name="suggested-job-statuses" id="suggested-job-statuses">
                <option value="" disabled selected>Select a suggested job status</option>
                <option value="Open">Open</option>
                <option value="Closed">Closed</option>
                <option value="In Progress">In Progress</option>
            </select>

            <!-- jobs benefits -->
            <label for="benefits">Job Benefits</label>
                <input type="text" 
                name="benefits" 
                id="benefits" 
                size="30" 
                maxlength="100" 
                placeholder="Health insurance, retirement plan"/>

            <!-- Dropdown menu for suggested benefits -->
            <label for="suggested-benefits">Suggested Benefits</label>
            <select name="suggested-benefits" id="suggested-benefits">
                <option value="" disabled selected>Select a suggested benefit</option>
                <option value="Health insurance">Health insurance</option>
                <option value="Retirement plan">Retirement plan</option>
                <option value="Paid time off">Paid time off</option>
                <option value="Flexible hours">Flexible hours</option>
                <option value="Remote work">Remote work</option>
            </select>

            <!-- Job location. -->
            <!-- SQL column name will reference name attribute. -->
            <label for="location">Job Location</label>
                <input type="text" 
                name="location" 
                id="location" 
                size="30" 
                maxlength="100" 
                required placeholder="Job Location" />


            <!-- Dropdown menu for suggested locations -->
            <label for="suggested-locations">Suggested Locations</label>
            <select name="suggested-locations" id="suggested-locations">
                <option value="" disabled selected>Select a suggested location</option>
                <option value="New York">New York</option>
                <option value="San Francisco">San Francisco</option>
                <option value="Los Angeles">Los Angeles</option>
                <option value="Chicago">Chicago</option>
                <option value="Seattle">Seattle</option>
                <option value="Austin">Austin</option>
            </select>

            <!-- Job URL. -->
            <!-- SQL column name will reference name attribute. -->
            <label for="url" class="required">Job URL</label>
                <input type="url" 
                name="url" 
                id="url" 
                size="30" 
                maxlength="100" 
                required placeholder="Job URL" />

            <!-- Job Skills -->
            <label for="skill_name">Job Skills</label>
                <input type="text" 
                name="skill_name" 
                id="skill_name" 
                size="30" 
                maxlength="100" 
                placeholder="JavaScript, Python, SQL"/>

            <!-- Dropdown menu for suggested skills -->
            <label for="suggested-skills">Suggested Skills</label>
            <select name="suggested-skills" id="suggested-skills">
                <option value="" disabled selected>Select a suggested skill</option>
                <option value="JavaScript">JavaScript</option>
